<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/emptyListIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_action_exclamation_mark"
        android:tint="@color/gray_text" />

    <TextView
        android:id="@+id/emptyListMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@string/font_fontFamily_light"
        android:gravity="center"
        android:text="@string/label_no_records_found"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_text" />

    <Button
        android:id="@+id/checkForNewData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@string/font_fontFamily_light"
        android:text="@string/check_for_new_data"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>